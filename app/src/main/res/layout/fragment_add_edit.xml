<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AddEditTodoFragment">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/todo_name_edit_tex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/todo_name"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:hint="@string/what_do_you_want_to_do"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/todo_date_edit_tex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/todo_name_edit_tex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/todo_date"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:hint="@string/on_what_date_will_it_be_achieved"
            android:drawableEnd="@drawable/ic_date"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/todo_time_edit_tex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/todo_date_edit_tex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/todo_time"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:hint="@string/what_time_will_it_be_done"
            android:drawableEnd="@drawable/ic_time"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


    </com.google.android.material.textfield.TextInputLayout>


    <CheckBox
        android:id="@+id/important_todo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="@string/important_task"
        tools:ignore="TouchTargetSizeCheck"
        app:layout_constraintTop_toBottomOf="@id/todo_time_edit_tex"
        app:layout_constraintStart_toStartOf="@id/todo_time_edit_tex"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/date_created_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Date created"
        android:layout_marginTop="10dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/important_todo"
        app:layout_constraintStart_toStartOf="@id/important_todo"/>

    <TextView
        android:id="@+id/scheduled_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Scheduled for"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/date_created_text_view"
        app:layout_constraintStart_toStartOf="@id/date_created_text_view"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="18dp"
        android:contentDescription="@string/just_floating_action_button"
        android:src="@drawable/ic_check_mark"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck,ImageContrastCheck,RedundantDescriptionCheck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

